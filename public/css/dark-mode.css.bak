/* Variables CSS pour le mode sombre */
:root {
    --bg-color: #ffffff;
    --text-color: #000000;
    --nav-bg: #0d6efd;
    --nav-text: rgba(255, 255, 255, 0.9);
    --footer-bg: #f8f9fa;
    --footer-text: #000000;
    --card-bg: #ffffff;
    --card-border: #dee2e6;
    --input-bg: #ffffff;
    --input-border: #ced4da;
    --input-text: #212529;
    --link-color: #0d6efd;
    --link-hover-color: #0a58ca;
    --table-bg: #ffffff;
    --table-border: #dee2e6;
    --table-hover-bg: #f8f9fa;
    --changelog-header-bg: #f8f9fa;
    --changelog-header-text: #212529;
    --changelog-card-bg: #ffffff;
    --changelog-text: #212529;
    --changelog-muted: #6c757d;
    --changelog-link: #0d6efd;
    --changelog-border: #dee2e6;
    --changelog-list-item-bg: #1e1e1e;
    --changelog-list-item-hover: #f8f9fa;
    --changelog-section-title: #212529;
    --changelog-section-border: #dee2e6;
    --version-bg: #e9ecef;
}

/* Mode sombre */
:root[data-bs-theme="dark"] {
    color-scheme: dark;
    --bg-color: #121212;
    --text-color: #ffffff;
    --nav-bg: #0d47a1;
    --footer-bg: #1e1e1e;
    --footer-text: #ffffff;
    --card-bg: #1e1e1e;
    --card-border: #404040;
    --input-bg: #1e1e1e;
    --input-border: #555;
    --input-text: #ffffff;
    --link-color: #66b0ff;
    --link-hover-color: #99ccff;
    --table-bg: #1e1e1e;
    --table-border: #404040;
    --table-hover-bg: #2a2a2a;
    --changelog-header-bg: #1e1e1e;
    --changelog-header-text: #ffffff;
    --changelog-card-bg: #1e1e1e;
    --changelog-text: #ffffff;
    --changelog-muted: #bbbbbb;
    --changelog-link: #66b0ff;
    --changelog-border: #404040;
    --changelog-list-item-bg: #1e1e1e;
    --changelog-list-item-hover: #2a2a2a;
    --changelog-section-title: #ffffff;
    --changelog-section-border: #404040;
    --version-bg: #292929;
}

html, body {
    background-color: var(--bg-color);
    color: var(--text-color);
    transition: background-color 0.3s ease, color 0.3s ease;
}

.navbar {
    background-color: var(--nav-bg) !important;
}

.navbar .navbar-nav .nav-link {
    color: var(--nav-text) !important;
}

.card {
    background-color: var(--card-bg);
    border-color: var(--card-border);
    color: var(--text-color);
}

.changelog {
    background-color: var(--changelog-header-bg);
    padding: 20px;
    border-radius: 10px;
    max-width: 800px;
    margin: 20px auto;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
}

.changelog .version {
    background-color: var(--version-bg);
    color: var(--text-color);
    padding: 5px 10px;
    border-radius: 5px;
    display: inline-block;
    font-weight: bold;
    border: 1px solid var(--changelog-border);
}

.changelog .date {
    color: var(--changelog-muted);
    font-size: 0.9em;
    margin-left: 10px;
}

.changelog ul {
    list-style-type: none;
    padding: 0;
}

.changelog li {
    background-color: var(--changelog-list-item-bg);
    padding: 10px;
    margin-top: 5px;
    border-radius: 5px;
    border-left: 4px solid var(--link-color);
    transition: background-color 0.2s ease;
}

.changelog li:hover {
    background-color: var(--changelog-list-item-hover);
}
